attacker[active]

principal Alice[
	generates k
	knows private m
	b = BLIND(k, m)
]

Alice -> Sarah: b

principal Sarah[
	knows private s
	gs = G^s
	blindsig = SIGN(s, b)
]

Sarah -> Alice: blindsig, gs

principal Alice[
	unblindedsig = UNBLIND(k, m, blindsig)
	_ = SIGNVERIF(gs, m, unblindedsig)?
]

queries[
	confidentiality? m
]
